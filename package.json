{
  "name": "related-files",
  "displayName": "Related Files",
  "description": "",
  "version": "0.0.1",
  "publisher": "Etheryte",
  "repository": {
    "type": "git",
    "url": "https://github.com/Etheryte/related-files.git"
  },
  "license": "UNLICENSED",
  "engines": {
    "vscode": "^1.58.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "relatedFiles",
          "name": "Related Files"
        }
      ]
    },
    "commands": [
      {
        "command": "relatedFiles.refresh",
        "title": "Refresh related files",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "relatedFiles.refresh",
          "when": "view == relatedFiles",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsce": "vsce",
    "package": "vsce package",
    "vscode:prepublish": "yarn run esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn run esbuild-base -- --sourcemap",
    "esbuild-watch": "yarn run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/micromatch": "^4.0.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/shelljs": "^0.8.11",
    "@types/vscode": "^1.58.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "esbuild": "^0.14.25",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "vsce": "^2.6.7"
  },
  "dependencies": {
    "micromatch": "^4.0.4",
    "shelljs": "^0.8.5"
  }
}
